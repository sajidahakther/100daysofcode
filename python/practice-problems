#001-002
def is_even(x):
  if x % 2 == 0:
    return True
  else:
    return False
 
#003
def is_int(x):
  if x == int(x):
    return True
  else:
    return False
    
#004 digit_sum(434) does (4+3+4=11) - prints 11 
def digit_sum(x):
    total = 0
    while x > 0:
        total += x % 10
        x = x // 10
        print x
    return total
